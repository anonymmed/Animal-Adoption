{% extends 'TemplateBundle:Layout:backpage.html.twig' %}

{% block  content %}
    <a href="{{ path('createconseils') }}" class="btn btn-default"><span>Ajouter</span></a>
    <center><h1>Liste Des Conseils</h1>
    <div class="box-body">
    <div class="box-body">
    <form>

        <input type="text" name="mot" id="mot" placeholder="chercher">
    </form>
    <style type="text/css">
        table{border-collapse: collapse;width: 40%;font-size: 10pt;} table,th,td{border:1px solid #cfbfa6;} th{background:#cfbfa6;color: white;}
    </style>
    <table id="table" class="table table-bordered table-hover">
        <thead>
        <th>Id</th>
        <th>titre</th>
        <th>text</th>
        <th>type</th>
        <th>Supprimer</th>
        <th>Modifier</th>


        </thead>
        <tbody id="tbody">
        {% for conseil in conseils  %}
            <tr><td>{{conseil.id }}</td>
                <td>{{conseil.titre }}</td>
                <td>{{conseil.text }}</td>
                <td>{{conseil.type }}</td>

                <td><a href="{{ path('deleteconseils', {'id':conseil.id }) }}" class='btn btn-default'>X</a></td>
                <td><a href="{{ path('updateconseils',{'id':conseil.id})}}" class='btn btn-default'><i class='fa fa-pencil-square-o'></i></a> </td>

            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}