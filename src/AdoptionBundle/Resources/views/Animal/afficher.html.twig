{% extends 'TemplateBundle:Layout:backpage.html.twig' %}
{% block  content %}
    <a href="{{ path('ajouter_animal') }}" class="btn btn-default"><span>Ajouter</span></a>
    <a href="{{ path('rechercheAjax') }}" class="btn btn-default"><span>Rechercher</span></a>
    <a href="{{ path('imprimerPDF') }}" class="btn btn-default"><span>Imprimer en PDF</span></a>
    <center><h1>Liste Des Animaux</h1>
    <div class="box-body">
    <style type="text/css">
        table{border-collapse: collapse;width: 40%;font-size: 10pt;} table,th,td{border:1px solid rgb(88, 111, 45);} th{background:rgb(88, 111, 45);color: white;}
    </style>
    <table id="example2" class="table table-bordered table-hover">
        <thead>
        <th>id</th>
        <th>Nom</th>
        <th>Espece</th>
        <th>Race</th>
        <th>Sexe</th>
        <th>Taille</th>
        <th>Age</th>
        <th>Region</th>
        <th>Refuge</th>
        <th>Etat</th>
        <th>Supprimer || Modifier</th>
        <th>Changer Etat</th>
        </thead>
        <tbody>
        {% for animal in animals  %}
            <tr><td>{{  animal.id}}</td>
                <td>{{  animal.nom }}</td>
                <td>{{  animal.race }}</td>
                <td>{{  animal.espece }}</td>
                <td>{{  animal.sexe }}</td>
                <td>{{  animal.taille }}</td>
                <td>{{  animal.age }}</td>
                <td>{{  animal.region }}</td>
                <td>{{  animal.idRefuge.libelle }}</td>
                <td>{{  animal.etat }}</td>

                <td><a href="{{ path('supprimer_animal',{'id':animal.id}) }}" class='btn btn-default' >X</a>
                <a href="{{ path('modifier_animal',{'id':animal.id}) }}" class='btn btn-default'><i class='fa fa-pencil-square-o'></i></a></td>
                <td><a href="{{ path('changerEtat',{'id':animal.id}) }}" class='btn btn-default' >Adopte</a></a>
                    <a href="{{ path('setnonadopter',{'id':animal.id}) }}" class='btn btn-default' >Non-Adopte</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}