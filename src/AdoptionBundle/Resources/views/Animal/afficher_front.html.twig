            <form id="recherche" class="navbar-form navbar-right" method="post" action="{{ path('recherchefront') }}">
            <div class=" rsidebar span_1_of_left">
                <h4 class="cate">Carect√©ristique</h4>
                <ul class="menu-drop">
                    <li class="item1"><a href="#"><h3>Race </h3></a>
                        <ul class="cute">
                          <li>  <label class="checkbox"><input type="checkbox" name="espece" value="chat"><i></i> Chat</label></li>
